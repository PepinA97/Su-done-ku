<Application x:Class="SudokuSolver.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SudokuSolver" ShutdownMode="OnExplicitShutdown" Startup="App_Startup">
    <Application.Resources>
        <Style TargetType="TextBox" x:Key="DefaultTextBoxStyle">
            <Style.Setters>
                <Setter Property="MinWidth" Value="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"></Setter>
                <Setter Property="MinHeight" Value="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"></Setter>
                <Setter Property="TextAlignment" Value="Center"></Setter>
                <Setter Property="MaxLines" Value="1"></Setter>
                <Setter Property="MaxLength" Value="1"></Setter>
                <Setter Property="FontSize" Value="20"></Setter>
            </Style.Setters>
        </Style>
    </Application.Resources>
</Application>
